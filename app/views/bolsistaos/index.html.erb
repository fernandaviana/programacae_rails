    <td><%= link_to 'mostrar', bolsistao %></td>
    <td><%= link_to 'Editar', edit_bolsistao_path(bolsistao) %></td>
    <td><%= link_to 'Excluir', bolsistao, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
